<h1>Iniciar sesión</h1>
<%= form_with(model: @user, url: sessions_path, method: :post, local:
true) do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
            <h2>Formlario inválido</h2>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :email %><br/>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %><br/>
        <%= f.password_field :password %>
    </div>
    <div class="actions"><%= f.submit "Iniciar sesión" %></div>
    
<% end %>